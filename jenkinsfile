pipeline {
    agent any
    
     environment {
        SUDO_PASS = credentials('ansible-sudo-password')  // Jenkins Secret Text ID for sudo password
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/VamsiJaddu/apache-update.git',
                    credentialsId: 'jenkins-github'
            }
        }
            stage('Checkout Ansible Repo') {
            steps {
                sshagent(credentials: ['jenkins-ansible']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ansible@172.31.1.11 << EOF
                        if [ ! -d "/home/ansible/apache-update" ]; then
                            echo "Cloning Ansible repository..."
                            git clone https://github.com/VamsiJaddu/apache-update.git /home/ansible/apache-update
                        else
                            echo "Updating existing Ansible repository..."
                            cd /home/ansible/apache-update
                            git pull
                        fi
                        << EOF
                    '''
                }
            }
        }
            stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: ['jenkins-ansible']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ansible@172.31.1.11 "
                        cd /home/ansible/apache-update/playbooks &&
                        ansible-playbook update-apache.yml -i /home/ansible/inventory.ini --extra-vars "ansible_become_pass=$SUDO_PASS"
                    "
                    '''
                }
            }
        }
           
    }

    post {
        success {
            echo '✅ Apache page updated successfully!'
        }
        failure {
            echo '❌ Failed to update Apache page.'
        }
    }
}
