pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/VamsiJaddu/apache-update.git',
                    credentialsId: 'jenkins-github'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: ['jenkins-ansible']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ansible@172.31.1.11 "
                        cd /home/ansible/apache-update/playbooks &&
                        ansible-playbook update-apache.yml -i /home/ansible/inventory/hosts
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ Apache page updated successfully!'
        }
        failure {
            echo '❌ Failed to update Apache page.'
        }
    }
}
