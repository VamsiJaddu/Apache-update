pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/<your-username>/apache-update.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sshagent(credentials: ['ansible-ssh-cred']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ansible@<ANSIBLE_SERVER_IP> "
                        cd /home/ansible/apache-update/playbooks &&
                        ansible-playbook update-apache.yml -i /home/ansible/inventory/hosts
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ Apache page updated successfully!'
        }
        failure {
            echo '❌ Failed to update Apache page.'
        }
    }
}
